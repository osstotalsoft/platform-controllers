    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run config controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/configuration-controller",
            "args": ["-v", "4"]
        },
        {
            "name": "Run secrets controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/secrets-controller",
            "args": ["-v", "4"],
            "env": {
                "VAULT_ADDR": "http://localhost:64025/"
            }
        },
        {
            "name": "Run provisioner",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd/tenant-provisioner",
            "args": [
                "--v",
                "4"
            ],
            "env": {
                "AZURE_LOCATION": "West Europe",
                "VAULT_ADDR": "http://localhost:65455/",
                // "VAULT_TOKEN": "PLEASE_ADD_VAULT_TOKEN"
            }
        }
    ]
}